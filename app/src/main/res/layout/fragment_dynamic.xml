<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/fragmentDynamic_frameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround">
        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_topic_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/fragmentDynamic_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <TextView
                    android:text="社交圈"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/fragmentDynamic_socialCircle"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:text="关注"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/fragmentDynamic_follow"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/fragmentDynamic_add"
                android:layout_width="1dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/fragmentDynamic_fabMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragmentDynamic_fab1"/>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragmentDynamic_fab2"/>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragmentDynamic_fab3"/>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragmentDynamic_fab4"/>
            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </LinearLayout>
    </FrameLayout>
</layout>